<Window x:Class="SekiroModManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sekiro Mod Manager"
        Width="436"
        Height="720"
        MinWidth="460"
        MinHeight="600"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    
    
    

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="uielements/Sekiro Mod Manager UI 720p.png"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- MAIN GRID: 3 ROWS -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="150"/>
                <RowDefinition Height="Auto" MinHeight="309"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- ================= MODS ROW ================= -->
            <StackPanel Grid.Row="1" Margin="0,0,0,175">
                <Label Content="Mods"
                       FontSize="20"
                       Foreground="White"
                       FontFamily="Assassin$"/>

                <ComboBox x:Name="ModsComboBox"
                          Height="30"
                          Margin="0,10"/>

                <WrapPanel>
                    <Button Content="+" Width="30" Height="30"
                            Click="AddModButton_Click"/>
                    <Button Content="-" Width="30" Height="30" Margin="10,0,0,0"
                            Click="RemoveModButton_Click"/>
                    <Button Content="Install" Width="60" Height="30" Margin="10,0,0,0"
                            Click="InstallModButton_Click"/>
                    <Button Content="Uninstall" Width="60" Height="30" Margin="10,0,0,0"
                            Click="UninstallModButton_Click"/>
                </WrapPanel>
            </StackPanel>

            <!-- ================= PROFILES ROW ================= -->
            <StackPanel Grid.Row="1" Margin="0,139,0,26">
                <Label Content="Profiles"
                       FontSize="20"
                       Foreground="White"
                       FontFamily="Assassin$"/>

                <ComboBox x:Name="ProfilesComboBox"
                          Height="30"
                          Margin="0,10"/>

                <WrapPanel>
                    <Button Content="+" Width="30" Height="30"
                            Click="AddProfileButton_Click"/>
                    <Button Content="-" Width="30" Height="30" Margin="10,0,0,0"
                            Click="RemoveProfileButton_Click"/>
                    <Button Content="Install" Width="60" Height="30" Margin="10,0,0,0"
                            Click="InstallProfileButton_Click"/>
                    <Button Content="Uninstall" Width="60" Height="30" Margin="10,0,0,0"
                            Click="UninstallProfileButton_Click"/>
                    <Button Content="Set Active" Width="80" Height="30" Margin="10,0,0,0"
                            Click="SetActiveProfileButton_Click"/>
                    <Button Content="Default" Width="80" Height="30" Margin="10,0,0,0"
                            Click="DefaultProfileButton_Click"/>
                </WrapPanel>
            </StackPanel>

            <!-- ================= SETTINGS ROW (2 COLUMNS) ================= -->
            <Grid Grid.Row="2" Margin="0,33,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- settings -->
                    <RowDefinition Height="Auto"/>
                    <!-- buttons -->
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <!-- Settings Column 1 -->
                <StackPanel Grid.Row="0" Grid.Column="0">

                    <CheckBox x:Name="WarningsCheckBox"
              Content="Warnings" Foreground="White"
              Checked="WarningsCheckBox_Checked"
              Unchecked="WarningsCheckBox_Unchecked"/>

                    <CheckBox x:Name="LoggingCheckBox"
              Content="Logging" Foreground="White"
              Checked="LoggingCheckBox_Checked"
              Unchecked="LoggingCheckBox_Unchecked"/>

                    <CheckBox x:Name="CloseOnLaunchCheckBox"
              Content="Close on Launch" Foreground="White"
              Checked="CloseOnLaunchCheckBox_Checked"
              Unchecked="CloseOnLaunchCheckBox_Unchecked"/>

                    <CheckBox x:Name="ChainDllCheckBox"
              Content="Chain DLL" Foreground="White"
              Checked="ChainDllCheckBox_Checked"
              Unchecked="ChainDllCheckBox_Unchecked"/>


                    <CheckBox x:Name="TransferSettignsCheckBox"
          Foreground="White"
          Checked="TransferSettignsCheckBox_Checked">
                        <TextBlock Text="Transfer mod engine settings after changing folder"
               TextWrapping="Wrap"/>
                    </CheckBox>


                    <Label x:Name="ActiveProfileLabel"
                Content="Active Profile: None"
                Foreground="White"/>


                </StackPanel>

                <!-- Settings Column 2 -->
                <StackPanel Grid.Row="0" Grid.Column="1">

                    <CheckBox x:Name="DebugCheckBox"
              Content="Debug" Foreground="White"
              Checked="DebugCheckBox_Checked"
              Unchecked="DebugCheckBox_Unchecked"/>

                    <CheckBox x:Name="SkipLogosCheckBox"
              Content="Skip Logos" Foreground="White"
              Checked="SkipLogosCheckBox_Checked"
              Unchecked="SkipLogosCheckBox_Unchecked"/>

                    <CheckBox x:Name="CacheFilePathsCheckBox"
              Content="Cache File Paths" Foreground="White"
              Checked="CacheFilePathsCheckBox_Checked"
              Unchecked="CacheFilePathsCheckBox_Unchecked"/>

                    <CheckBox x:Name="LoadUxmFilesCheckBox"
              Content="Load UXM Files" Foreground="White"
              Checked="LoadUxmFilesCheckBox_Checked"
              Unchecked="LoadUxmFilesCheckBox_Unchecked"/>

                    <CheckBox x:Name="ReinstallModsCheckBox"
          Foreground="White">
                        <TextBlock Text="Reinstall mods after changing folder"
               TextWrapping="Wrap"/>
                    </CheckBox>

                    <Label x:Name="DirLabel" Foreground="White" Content="C/Sekiro/"/>



                    
                </StackPanel>


                <StackPanel Grid.Row="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Margin="0,20,0,0" Orientation="Horizontal">

                    <Button Content="Change Sekiro Directory"
            Height="30"
            Width="150"
            Margin="0,0,10,10"
            Click="ChangeSekiroDirButton_Click"/>

                    <Button Content="Launch Sekiro"
            Height="30"
            Width="150"
            Click="LaunchSekiroButton_Click" Margin="10,0,0,10"/>

                </StackPanel>


            </Grid>
        </Grid>
    </Grid>
</Window>
