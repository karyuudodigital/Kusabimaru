<Window x:Class="SekiroModManager.Views.AddProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Profile" Height="259" Width="756"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Black"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Please enter the name of the profile" 
               Foreground="White" FontSize="26" FontFamily="Assassin$" 
               HorizontalAlignment="Center" Margin="0,15,0,0"/>
        
        <TextBox Grid.Row="1" x:Name="ProfileNameTextBox" 
                 Foreground="White" Background="Black" FontSize="26" FontFamily="Assassin$"
                 Margin="90,10,90,0" Height="51"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="50,20,50,0">
            <Label Content="Number of mods:" 
                   Foreground="White" FontSize="26" FontFamily="Assassin$" 
                   VerticalAlignment="Center"/>
            <TextBox x:Name="ModCountTextBox" 
                     Foreground="White" Background="Black" FontSize="26" FontFamily="Assassin$"
                     Width="61" Height="41" Margin="10,0,0,0" Text="1"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button x:Name="ConfirmButton" Content="OK" 
                    Width="151" Height="101" Margin="0,0,20,0"
                    Click="ConfirmButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                    Width="211" Height="111"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
