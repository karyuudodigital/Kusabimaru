<Window x:Class="SekiroModManager.Views.RepeatFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Repeat File" Height="341" Width="668"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Black"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" x:Name="FileNameLabel" Content="File found" 
               Foreground="White" FontSize="26" FontFamily="Assassin$" 
               Margin="70,30,70,0"/>
        
        <Label Grid.Row="1" Content="Please choose the folder:" 
               Foreground="White" FontSize="26" FontFamily="Assassin$" 
               Margin="70,10,70,0"/>
        
        <ComboBox Grid.Row="2" x:Name="FolderComboBox" 
                  Foreground="White" Background="Black" FontSize="26" FontFamily="Assassin$"
                  Margin="100,20,100,0" Height="71"
                  SelectionChanged="FolderComboBox_SelectionChanged"/>
        
        <Button Grid.Row="3" x:Name="OkButton" Content="OK" 
                Width="151" Height="101" Margin="0,0,0,20"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Click="OkButton_Click"/>
    </Grid>
</Window>
